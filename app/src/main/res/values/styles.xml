<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/slide</item>
    </style>

    <style name="headline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/material_typography_headline</item>
    </style>

    <style name="smallHeadline" parent="headline">
        <item name="android:textSize">@dimen/material_typography_subheading</item>
    </style>

    <style name="smallSubHeading">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="eventDetailImage">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginStart">@dimen/material_layout_keylines_screen_edge_margin</item>
    </style>

    <style name="eventDetailDivder">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">@dimen/material_layout_keylines_content_left_margin_from_screen_edge</item>
        <item name="android:layout_marginEnd">@dimen/material_layout_keylines_screen_edge_margin</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:background">@color/colorGray</item>
        <item name="android:layout_marginTop">@dimen/vertical_content_spacing_x_2</item>
    </style>

    <dimen name="small_margin">8dp</dimen>
</resources>
